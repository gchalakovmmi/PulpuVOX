package mock

import (
    "github.com/markbates/goth"
)

templ Mock(user *goth.User) {
    <div class="container">
        <h1>Conversation Analysis</h1>
        
        <!-- Feedback Section -->
        <div id="feedback-section" class="feedback-section">
            <h2>Teacher's Feedback</h2>
            <div id="feedback-content" class="feedback-content">
                <div class="loading-feedback">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p>Generating feedback...</p>
                </div>
            </div>
        </div>
        
        <!-- Conversation History -->
        <div id="conversation-history"></div>
    </div>
}
