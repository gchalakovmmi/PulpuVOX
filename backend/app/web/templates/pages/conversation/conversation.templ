package conversation

import (
    "PulpuVOX/web/templates/base"
    "PulpuVOX/web/templates/pages/conversation/components/conversationui"
    "github.com/markbates/goth"
)

templ ConversationComponents() {
    @conversationui.ConversationUI()
}

templ Conversation(user *goth.User) {
    @base.Base("PulpuVOX - Conversation", ConversationComponents(), user)
    <script src="/static/js/conversation-state.js"></script>
    <script src="/static/js/conversation-ui.js"></script>
    <script src="/static/js/conversation-recording.js"></script>
    <script src="/static/js/conversation-api.js"></script>
    <script src="/static/js/conversation-main.js"></script>
}
