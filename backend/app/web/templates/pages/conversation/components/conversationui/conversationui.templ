package conversationui

templ ConversationUI() {
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Conversation with Voxy</h4>
                </div>
                <div class="card-body">
                    <!-- Conversation interface -->
                    <div class="text-center mb-4">
                        <img src="/static/images/voxy-blinking.gif" alt="Voxy" class="img-fluid rounded-circle mb-3" style="max-height: 200px;">
                        <p class="text-muted">Voxy is ready to chat with you!</p>
                    </div>
                    
                    <!-- Conversation history -->
                    <div id="conversation-history" class="conversation-history mb-4 p-3 bg-light rounded" style="min-height: 300px; max-height: 400px; overflow-y: auto;">
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-comments fa-3x mb-2"></i>
                            <p>Your conversation will appear here</p>
                        </div>
                    </div>
                    
                    <!-- Controls -->
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-lg" id="startButton" onclick="startRecording()">
                            <i class="fas fa-microphone me-2"></i>Start Conversation
                        </button>
                        <button class="btn btn-outline-danger" id="endConversationButton" onclick="endConversation()" disabled>
                            <i class="fas fa-stop-circle me-2"></i>End Conversation
                        </button>
                    </div>
                    
                    <!-- Status indicator -->
                    <div class="mt-3 text-center">
                        <small class="text-muted" id="statusIndicator">Ready to start</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Hidden form for conversation data -->
    <form id="conversation-form" class="d-none">
        <input type="hidden" id="conversation-history-data" name="history">
    </form>
    
    <!-- Audio element for playback -->
    <audio id="audio-player" class="d-none"></audio>

	 <!-- Include conversation JavaScript -->
    <script src="/static/js/conversation.js"></script>
}
